<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    tools:context="com.inc.playground.playgroundApp.Home" >
    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>



    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp" >

        <!-- The main content view -->

        <LinearLayout
            android:id="@+id/ll_data"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/sidebar_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/home"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/txt_avail"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="Home"
                    android:textColor="#fff"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cat"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/category"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="My Events"
                    android:textColor="#fff"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fav"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/favourite"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="My Profile"
                    android:textColor="#fff"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_featured"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/featured"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="Settings"
                    android:textColor="#fff"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/login"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="Login"
                    android:textColor="#fff"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_about"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/aboutus"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="About Us"
                    android:textColor="#fff"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>



</RelativeLayout>