<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:gravity="right"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notification_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/pg_notifications"
        android:backgroundTint="#2F307B"
        android:layout_marginRight="-25dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/notification__numberTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:textColor="#FFF"
        android:textSize="11sp"
        android:background="@drawable/bage_circle"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"/>


    <com.inc.playground.playgroundApp.utils.RoundedImageView
        android:id="@+id/img_profile_action_bar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/default_circle_img"
        android:layout_marginRight="10dp" />





</LinearLayout>


