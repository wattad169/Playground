<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- The main content view -->

    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/pg_background_nav"
            android:orientation="vertical">

            <com.inc.playground.playgroundApp.utils.RoundedImageView
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/pg_user_background"
                android:layout_marginLeft="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:gravity="left"
                android:paddingBottom="4dp"
                android:id="@+id/username"
                android:layout_above="@+id/email"
                android:layout_alignLeft="@+id/profile_image"
                android:layout_alignStart="@+id/profile_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:gravity="left"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/username"
                android:layout_alignStart="@+id/username" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pg_action_home"/>

            <TextView
                android:id="@+id/txt_avail"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="Home"
                android:textColor="#303F9F"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#b2dfee">
        </View>

        <LinearLayout
            android:id="@+id/ll_my_profile"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pg_action_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="Profile"
                android:textColor="#303F9F"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#b2dfee">
        </View>

        <!--<LinearLayout-->
            <!--android:id="@+id/ll_settings"-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:background="#FFFFFF"-->
            <!--android:gravity="center_vertical" >-->

            <!--<ImageView-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:src="@drawable/pg_action_settings"/>-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginLeft="12dp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="Settings"-->
                <!--android:textColor="#303F9F"-->
                <!--android:textSize="15dp" />-->
        <!--</LinearLayout>-->

        <!--<View-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#b2dfee">-->
        <!--</View>-->

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/login_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pg_action_lock_open"/>

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="Login"
                android:textColor="#303F9F"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#b2dfee">
        </View>

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pg_action_about"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="About us"
                android:textColor="#303F9F"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#b2dfee">
        </View>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>