<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_fav"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#f0f8ff"
        android:gravity="center">

        <com.inc.playground.playgroundApp.utils.RoundedImageView
            android:id="@+id/img_type"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#104e8b"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="6dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="event_name"
            android:id="@+id/approveId_txt"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#1874cd"
            android:textStyle="bold"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/img_profile_action_bar" />


    </RelativeLayout>

</RelativeLayout>